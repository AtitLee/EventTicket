<% layout('layout') -%>
<article class="event-detail">
  <img class="cover" src="<%= event.coverImage || 'https://placehold.co/1200x400?text=Event' %>"/>
  <div class="card">
    <h2><%= event.title %></h2>
    <p class="muted"><strong>When:</strong> <%= new Date(event.startAt).toLocaleString() %> - <%= new Date(event.endAt).toLocaleString() %></p>
    <p class="muted"><strong>Where:</strong> <%= event.venue %> <%= event.location ? '('+event.location+')' : '' %></p>
    <p><%= event.description %></p>
  </div>

  <div class="card">
    <h3>Tickets</h3>
    <% if (event.ticketTypes.length === 0) { %>
      <p>No tickets configured.</p>
    <% } else if (role === 'organizer') { %>
      <!-- Organizer view: Show ticket types without purchase option -->
      <div class="ticket-info">
        <% event.ticketTypes.forEach(tt => { %>
          <div class="list-item">
            <div>
              <strong><%= tt.name %></strong>
              <div class="muted">฿<%= tt.price %> | Sold: <%= tt.qtySold %>/<%= tt.qtyTotal %> tickets</div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <!-- Regular user view: Show purchase form -->
      <% if (currentUser) { %>
        <form action="/events/<%= event._id %>/checkout" method="POST" class="form">
          <div class="grid-2">
            <div class="input-group">
              <label>Type</label>
              <select name="ticketTypeId">
                <% event.ticketTypes.forEach(tt => { %>
                  <option value="<%= tt._id %>"><%= tt.name %> — ฿<%= tt.price %> | left: <%= (tt.qtyTotal-tt.qtySold) %></option>
                <% }) %>
              </select>
            </div>
            <div class="input-group">
              <label>Qty</label>
              <input type="number" min="1" name="qty" value="1"/>
            </div>
          </div>
          <button class="btn" type="submit">Buy Ticket</button>
        </form>
      <% } else { %>
        <!-- Not logged in: Show ticket info and login prompt -->
        <div class="ticket-info">
          <% event.ticketTypes.forEach(tt => { %>
            <div class="list-item">
              <div>
                <strong><%= tt.name %></strong>
                <div class="muted">฿<%= tt.price %> | Available: <%= (tt.qtyTotal-tt.qtySold) %> tickets</div>
              </div>
            </div>
          <% }) %>
        </div>
        <div class="card center" style="margin-top: 16px; background: #0f172a; border-color: #1f2937;">
          <p class="muted">Please login to purchase tickets</p>
          <div style="display: flex; gap: 12px; justify-content: center;">
            <a class="btn" href="/auth/login">Login</a>
            <a class="btn btn-outline" href="/auth/register">Register</a>
          </div>
        </div>
      <% } %>
    <% } %>

    <% if (typeof error !== 'undefined') { %>
      <p class="error"><%= error %></p>
    <% } %>
  </div>

  <!-- Organizer: Show buyers list -->
  <% if (role === 'organizer' && typeof orders !== 'undefined' && orders.length > 0) { %>
  <div class="card">
    <h3>Buyers (<%= orders.length %>)</h3>
    <p class="muted">List of people who purchased tickets for this event</p>
    
    <div class="buyers-grid">
      <% orders.forEach(o => { %>
        <% if (o.attendeeId) { %>
        <div class="buyer-card">
          <div class="buyer-info">
            <div class="buyer-name"><%= o.attendeeId.name %></div>
            <div class="buyer-email"><%= o.attendeeId.email %></div>
          </div>
          <div class="buyer-tickets">
            <% o.items.forEach(it => { %>
              <div class="ticket-item">
                <span class="ticket-name"><%= it.name %></span>
                <span class="ticket-qty">× <%= it.qty %></span>
                <span class="ticket-price">฿<%= it.unitPrice * it.qty %></span>
              </div>
            <% }) %>
          </div>
          <div class="buyer-meta">
            <span class="muted"><%= new Date(o.createdAt).toLocaleString() %></span>
          </div>
        </div>
        <% } %>
      <% }) %>
    </div>
  </div>
  <% } %>
</article>

<style>
.buyers-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 12px;
  margin-top: 16px;
}

.buyer-card {
  background: #0f172a;
  border: 1px solid #1f2937;
  border-radius: 12px;
  padding: 14px;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.buyer-info {
  border-bottom: 1px solid #1f2937;
  padding-bottom: 8px;
}

.buyer-name {
  font-weight: 600;
  font-size: 1rem;
  color: var(--txt);
}

.buyer-email {
  font-size: 0.85rem;
  color: var(--muted);
  margin-top: 2px;
}

.buyer-tickets {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.ticket-item {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 6px 8px;
  background: #1e293b;
  border-radius: 6px;
}

.ticket-name {
  flex: 1;
  font-size: 0.9rem;
}

.ticket-qty {
  color: var(--accent);
  font-weight: 600;
  font-size: 0.9rem;
}

.ticket-price {
  color: var(--accent);
  font-weight: 600;
  font-size: 0.9rem;
}

.buyer-meta {
  font-size: 0.8rem;
  padding-top: 6px;
  border-top: 1px solid #1f2937;
}

@media (max-width: 768px) {
  .buyers-grid {
    grid-template-columns: 1fr;
  }
}
</style>
