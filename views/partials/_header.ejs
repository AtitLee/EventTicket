<header class="header glass">
  <div class="header-left">
    <a href="/" class="brand">EventHub</a>
    <nav>
      <a href="/events">Events</a>
      <% if (role === 'organizer') { %>
        <a href="/organizer/dashboard">Organizer</a>
        <a href="/organizer/verify">Verify Ticket</a>
      <% } %>
    </nav>
  </div>
  <div class="auth">
    <% if (currentUser) { %>
      <a href="/profile">Profile</a>
      <span class="chip">Hi, <%= currentUser.name %> â€¢ <%= currentUser.role %></span>
      <form action="/auth/logout" method="POST" class="inline">
        <button class="btn btn-outline" type="submit">Logout</button>
      </form>
    <% } else { %>
      <a class="btn btn-outline" href="/auth/login">Login</a>
      <a class="btn" href="/auth/register">Register</a>
    <% } %>
  </div>
</header>

<style>
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 14px 20px;
  position: sticky;
  top: 0;
  z-index: 10;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 24px;
}

.auth {
  display: flex;
  align-items: center;
  gap: 14px;
}
</style>
